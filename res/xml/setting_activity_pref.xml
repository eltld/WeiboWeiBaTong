        </Preference>
        -->
        <Preference
            android:key="filter"
            android:summary="眼不见心不烦"
            android:title="@string/filter" >
            <intent
                android:targetClass="org.zarroboogs.weibo.setting.activity.FilterActivity"
                android:targetPackage="org.zarroboogs.weibo" />
        </Preference>
